{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class='page page--background'>
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" name="email" placeholder="Ваш email" type="email" label="Ел.
                адреса"}}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-select action="signupForm.change" name="role" placeholder="Оберіть роль"
                list=data.role label="Роль"}}
                <span name="role" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password action="signupForm.change" name="password" label="Пароль"
                placeholder="Введіть пароль"}}

                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password action="signupForm.change" name="passwordAgain" label="Пароль ще раз"
                placeholder="Введіть пароль"}}

                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-checkbox action="signupForm.change" name="isConfirm"
                label="Ви погоджуєтеся з правилами сервіса"}}

                <span name="isConfirm" class="form__error">Помилка</span>
            </div>
            <button class="button button--disabled" onclick="signupForm.submit()" type="button">Зареєструватися</button>
            <span class="alert alert--disabled">Увага, помилка!</span>

    </form>
</div>

